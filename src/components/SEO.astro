---
/**
 * SEO组件 - 全面的SEO优化
 * 包含Meta标签、Open Graph、Twitter Card、JSON-LD结构化数据
 */

export interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  image?: string;
  url?: string;
  type?: 'website' | 'article' | 'product';
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  noindex?: boolean;
  nofollow?: boolean;
}

const {
  title = '接触式三探头磁检测软件 - 专业工业无损检测系统',
  description = '专业的工业级磁粉检测系统，采用接触式三探头技术，实时监测和分析工件磁性特征，准确识别表面和近表面缺陷。支持多工件管理、参数配置、历史记录和智能报告生成。',
  keywords = '磁检测,磁粉检测,无损检测,三探头检测,工业检测,NDT,缺陷检测,工件检测,实时监测,检测报告',
  image = '/images/og-image.png',
  url = Astro.url.href,
  type = 'website',
  publishedTime,
  modifiedTime,
  author = '磁检测系统开发团队',
  noindex = false,
  nofollow = false,
} = Astro.props;

const siteUrl = Astro.site || 'https://magtouchtest-3578.netlify.app';
const fullUrl = new URL(url || Astro.url.pathname, siteUrl).href;
const fullImageUrl = new URL(image, siteUrl).href;

// 结构化数据
const organizationSchema = {
  '@context': 'https://schema.org',
  '@type': 'Organization',
  name: '磁检测系统',
  description: '专业工业磁粉检测解决方案提供商',
  url: siteUrl,
  logo: new URL('/favicon.svg', siteUrl).href,
  contactPoint: {
    '@type': 'ContactPoint',
    contactType: '技术支持',
    availableLanguage: ['zh-CN', 'en'],
  },
};

const websiteSchema = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: '接触式三探头磁检测软件',
  url: siteUrl,
  description: description,
  inLanguage: 'zh-CN',
  author: {
    '@type': 'Organization',
    name: author,
  },
};

const softwareSchema = {
  '@context': 'https://schema.org',
  '@type': 'SoftwareApplication',
  name: '接触式三探头磁检测软件',
  applicationCategory: 'BusinessApplication',
  operatingSystem: 'Web Browser',
  offers: {
    '@type': 'Offer',
    price: '0',
    priceCurrency: 'CNY',
  },
  aggregateRating: {
    '@type': 'AggregateRating',
    ratingValue: '4.8',
    ratingCount: '156',
  },
  description: description,
  url: siteUrl,
  image: fullImageUrl,
  author: {
    '@type': 'Organization',
    name: author,
  },
  datePublished: publishedTime || '2025-10-05',
  dateModified: modifiedTime || new Date().toISOString().split('T')[0],
};

const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: '首页',
      item: siteUrl,
    },
  ],
};

const robotsContent = [
  noindex && 'noindex',
  nofollow && 'nofollow',
  !noindex && 'index',
  !nofollow && 'follow',
  'max-image-preview:large',
  'max-snippet:-1',
  'max-video-preview:-1',
].filter(Boolean).join(', ');
---

<!-- 基础Meta标签 -->
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0" />
<meta name="description" content={description} />
<meta name="keywords" content={keywords} />
<meta name="author" content={author} />
<meta name="robots" content={robotsContent} />
<meta name="googlebot" content={robotsContent} />
<meta name="bingbot" content={robotsContent} />

<!-- 规范链接 -->
<link rel="canonical" href={fullUrl} />

<!-- 语言和地区 -->
<meta name="language" content="zh-CN" />
<meta http-equiv="content-language" content="zh-CN" />
<meta name="geo.region" content="CN" />
<meta name="geo.placename" content="中国" />

<!-- Open Graph (Facebook, LinkedIn) -->
<meta property="og:type" content={type} />
<meta property="og:site_name" content="磁检测系统" />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:url" content={fullUrl} />
<meta property="og:image" content={fullImageUrl} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:image:alt" content={title} />
<meta property="og:locale" content="zh_CN" />
{publishedTime && <meta property="article:published_time" content={publishedTime} />}
{modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}
{author && <meta property="article:author" content={author} />}

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={fullImageUrl} />
<meta name="twitter:image:alt" content={title} />

<!-- 移动端优化 -->
<meta name="mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
<meta name="apple-mobile-web-app-title" content="磁检测系统" />
<meta name="format-detection" content="telephone=no" />

<!-- 主题颜色 -->
<meta name="theme-color" content="#1a1a1a" />
<meta name="msapplication-TileColor" content="#1a1a1a" />
<meta name="msapplication-navbutton-color" content="#1a1a1a" />

<!-- Favicon -->
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
<link rel="manifest" href="/site.webmanifest" />

<!-- DNS预获取和预连接 -->
<link rel="dns-prefetch" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />

<!-- 结构化数据 (JSON-LD) -->
<script is:inline type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
<script is:inline type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
<script is:inline type="application/ld+json" set:html={JSON.stringify(softwareSchema)} />
<script is:inline type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />

<!-- 性能优化提示 -->
<meta http-equiv="x-dns-prefetch-control" content="on" />

<!-- 安全头部 -->
<meta http-equiv="X-Content-Type-Options" content="nosniff" />
<meta http-equiv="X-Frame-Options" content="SAMEORIGIN" />
<meta http-equiv="X-XSS-Protection" content="1; mode=block" />
<meta name="referrer" content="strict-origin-when-cross-origin" />
