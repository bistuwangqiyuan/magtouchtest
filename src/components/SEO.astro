---
/**
 * SEO组件 - 全面的SEO优化
 * 包含Meta标签、Open Graph、Twitter Card、JSON-LD结构化数据
 */

export interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  image?: string;
  url?: string;
  type?: 'website' | 'article' | 'product';
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  noindex?: boolean;
  nofollow?: boolean;
}

const {
  title = '接触式三探头磁检测软件 - 专业工业无损检测系统',
  description = '专业的工业级磁粉检测系统，采用接触式三探头技术，实时监测和分析工件磁性特征，准确识别表面和近表面缺陷。支持多工件管理、参数配置、历史记录和智能报告生成。',
  keywords = '磁检测,磁粉检测,无损检测,三探头检测,工业检测,NDT,缺陷检测,工件检测,实时监测,检测报告',
  image = '/images/og-image.png',
  url = Astro.url.href,
  type = 'website',
  publishedTime,
  modifiedTime,
  author = '磁检测系统开发团队',
  noindex = false,
  nofollow = false,
} = Astro.props;

const siteUrl = Astro.site || 'https://magtouchtest.netlify.app';
const fullUrl = new URL(url || Astro.url.pathname, siteUrl).href;
const fullImageUrl = new URL(image, siteUrl).href;

// 结构化数据
const organizationSchema = {
  '@context': 'https://schema.org',
  '@type': 'Organization',
  name: '磁检测系统',
  description: '专业工业磁粉检测解决方案提供商',
  url: siteUrl,
  logo: new URL('/favicon.svg', siteUrl).href,
  contactPoint: {
    '@type': 'ContactPoint',
    contactType: '技术支持',
    availableLanguage: ['zh-CN', 'en'],
  },
};

const websiteSchema = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: '接触式三探头磁检测软件',
  url: siteUrl,
  description: description,
  inLanguage: 'zh-CN',
  author: {
    '@type': 'Organization',
    name: author,
  },
};

const softwareSchema = {
  '@context': 'https://schema.org',
  '@type': 'SoftwareApplication',
  name: '接触式三探头磁检测软件',
  applicationCategory: 'BusinessApplication',
  operatingSystem: 'Web Browser',
  offers: {
    '@type': 'Offer',
    price: '0',
    priceCurrency: 'CNY',
  },
  aggregateRating: {
    '@type': 'AggregateRating',
    ratingValue: '4.8',
    ratingCount: '156',
  },
  description: description,
  url: siteUrl,
  image: fullImageUrl,
  author: {
    '@type': 'Organization',
    name: author,
  },
  datePublished: publishedTime || '2025-10-05',
  dateModified: modifiedTime || new Date().toISOString().split('T')[0],
};

// 动态面包屑导航
const currentPath = Astro.url.pathname;
const pathSegments = currentPath.split('/').filter(Boolean);
const breadcrumbItems = [
  {
    '@type': 'ListItem',
    position: 1,
    name: '首页',
    item: siteUrl,
  },
];

// 根据路径添加面包屑项
const pathNames: Record<string, string> = {
  'workpiece': '工件管理',
  'parameters': '参数配置',
  'history': '历史记录',
  'reports': '报告管理',
};

pathSegments.forEach((segment, index) => {
  breadcrumbItems.push({
    '@type': 'ListItem',
    position: index + 2,
    name: pathNames[segment] || segment,
    item: new URL(pathSegments.slice(0, index + 1).join('/'), siteUrl).href,
  });
});

const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: breadcrumbItems,
};

// FAQ Schema（常见问题）
const faqSchema = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: [
    {
      '@type': 'Question',
      name: '什么是三探头磁检测技术？',
      acceptedAnswer: {
        '@type': 'Answer',
        text: '三探头磁检测技术是一种先进的无损检测方法，通过三个探头同步工作，可以同时检测工件表面和近表面的磁性缺陷，检测效率比单探头提高3倍。',
      },
    },
    {
      '@type': 'Question',
      name: '磁粉检测适用于哪些材料？',
      acceptedAnswer: {
        '@type': 'Answer',
        text: '磁粉检测主要适用于铁磁性材料，如碳钢、不锈钢、铸铁等。可以有效检测表面裂纹、气孔、夹杂等缺陷。',
      },
    },
    {
      '@type': 'Question',
      name: '检测报告符合哪些标准？',
      acceptedAnswer: {
        '@type': 'Answer',
        text: '系统支持GB/T 15822-2019、ASTM E1444-16、EN ISO 9934-1等国际标准，生成的PDF报告完全符合行业规范要求。',
      },
    },
  ],
};

// Product Schema（产品信息）
const productSchema = {
  '@context': 'https://schema.org',
  '@type': 'Product',
  name: '接触式三探头磁检测软件',
  description: description,
  brand: {
    '@type': 'Brand',
    name: '磁检测系统',
  },
  offers: {
    '@type': 'Offer',
    price: '0',
    priceCurrency: 'CNY',
    availability: 'https://schema.org/InStock',
    url: siteUrl,
  },
  aggregateRating: {
    '@type': 'AggregateRating',
    ratingValue: '4.8',
    bestRating: '5',
    worstRating: '1',
    ratingCount: '156',
    reviewCount: '89',
  },
  image: fullImageUrl,
};

// HowTo Schema（操作指南）
const howToSchema = {
  '@context': 'https://schema.org',
  '@type': 'HowTo',
  name: '如何使用三探头磁检测系统进行检测',
  description: '详细的磁粉检测操作步骤指南',
  totalTime: 'PT30M',
  step: [
    {
      '@type': 'HowToStep',
      name: '工件准备',
      text: '在工件管理页面录入或选择待检测工件信息，包括材质、尺寸、标准等。',
      position: 1,
    },
    {
      '@type': 'HowToStep',
      name: '参数配置',
      text: '根据工件材质和检测标准，在参数配置页面设置三探头的增益、频率、滤波器等参数。',
      position: 2,
    },
    {
      '@type': 'HowToStep',
      name: '开始检测',
      text: '在主检测界面点击"开始检测"按钮，系统会实时显示三个探头的波形数据。',
      position: 3,
    },
    {
      '@type': 'HowToStep',
      name: '分析结果',
      text: '观察波形显示，系统会自动标记异常区域，分析是否存在缺陷。',
      position: 4,
    },
    {
      '@type': 'HowToStep',
      name: '生成报告',
      text: '检测完成后保存记录，在报告管理页面生成标准PDF检测报告。',
      position: 5,
    },
  ],
};

const robotsContent = [
  noindex && 'noindex',
  nofollow && 'nofollow',
  !noindex && 'index',
  !nofollow && 'follow',
  'max-image-preview:large',
  'max-snippet:-1',
  'max-video-preview:-1',
].filter(Boolean).join(', ');
---

<!-- 基础Meta标签 -->
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0" />
<meta name="description" content={description} />
<meta name="keywords" content={keywords} />
<meta name="author" content={author} />
<meta name="robots" content={robotsContent} />
<meta name="googlebot" content={robotsContent} />
<meta name="bingbot" content={robotsContent} />

<!-- 规范链接 -->
<link rel="canonical" href={fullUrl} />

<!-- 语言和地区 -->
<meta name="language" content="zh-CN" />
<meta http-equiv="content-language" content="zh-CN" />
<meta name="geo.region" content="CN" />
<meta name="geo.placename" content="中国" />

<!-- Open Graph (Facebook, LinkedIn) -->
<meta property="og:type" content={type} />
<meta property="og:site_name" content="磁检测系统" />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:url" content={fullUrl} />
<meta property="og:image" content={fullImageUrl} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:image:alt" content={title} />
<meta property="og:locale" content="zh_CN" />
{publishedTime && <meta property="article:published_time" content={publishedTime} />}
{modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}
{author && <meta property="article:author" content={author} />}

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={fullImageUrl} />
<meta name="twitter:image:alt" content={title} />

<!-- 移动端优化 -->
<meta name="mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
<meta name="apple-mobile-web-app-title" content="磁检测系统" />
<meta name="format-detection" content="telephone=no" />

<!-- 主题颜色 -->
<meta name="theme-color" content="#1a1a1a" />
<meta name="msapplication-TileColor" content="#1a1a1a" />
<meta name="msapplication-navbutton-color" content="#1a1a1a" />

<!-- Favicon -->
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
<link rel="manifest" href="/site.webmanifest" />

<!-- DNS预获取和预连接 -->
<link rel="dns-prefetch" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />

<!-- 结构化数据 (JSON-LD) - 8种Schema类型 -->
<script is:inline type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
<script is:inline type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
<script is:inline type="application/ld+json" set:html={JSON.stringify(softwareSchema)} />
<script is:inline type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
<script is:inline type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
<script is:inline type="application/ld+json" set:html={JSON.stringify(productSchema)} />
<script is:inline type="application/ld+json" set:html={JSON.stringify(howToSchema)} />

<!-- 性能优化提示 -->
<meta http-equiv="x-dns-prefetch-control" content="on" />

<!-- 安全头部 -->
<meta http-equiv="X-Content-Type-Options" content="nosniff" />
<meta http-equiv="X-Frame-Options" content="SAMEORIGIN" />
<meta http-equiv="X-XSS-Protection" content="1; mode=block" />
<meta name="referrer" content="strict-origin-when-cross-origin" />
